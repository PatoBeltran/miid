<div class="row">
  <div class="col s4 z-depth-1 valign-wrapper side-inner-wrapper">
    <div class="row">
      <div class="col s12 valign center-block center">
        <h4 class="grey-text text-darken-1">¿Olvidaste tu contraseña?</h4>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="input-field">
            <%= f.text_field :email, class: "validate" %>
            <%= f.label :email, "Correo electrónico", autofocus: true %>
          </div>

          <div class="actions">
            <%= f.button(type: "submit", class:"btn waves-effect waves-light") do %>
              Envíar instrucciones <i class="mdi-content-send right"></i>
          <% end %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
