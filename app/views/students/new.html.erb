<div class="row">
  <div class="col s4 z-depth-1 valign-wrapper side-inner-wrapper">
    <div class="row">
      <div class="col s12 valign center-block center">
        <h4 class="grey-text text-darken-1">Estudiante</h4>
        <% if @student.errors.any? %>
          <ul>
            <% @student.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
          </ul>
        <% end %>
        <%= form_for @student, style: "margin-top: 30px;", class: "center" do |f| %>
          <%= render "shared/registration_user_fields", f: f, teacher: false %>
          <div class="input-field">
            <%= f.number_field :graduation_date, class: "validate" %>
            <%= f.label :graduation_date, "AÃ±o de GraduaciÃ³n" %>
          </div>
          <%= f.button(type: "submit", class:"btn waves-effect waves-light") do %>
            Crear Estudiante <i class="mdi-content-send right"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
