<div class="row">
  <div class="col s3 z-depth-1 no-padding" style="height: 100vh; overflow: scroll;">
    <nav>
      <div class="nav-wrapper grey lighten-2">
        <form>
          <div class="input-field">
            <input id="search" type="search" onkeyup="searchCourse($(this).val())" required>
            <label for="search"><i class="mdi-action-search"></i></label>
            <i class="mdi-navigation-close"></i>
          </div>
        </form>
      </div>
    </nav>
    <div id="courses">
      <% @courses.each do |course| %>
        <a href="#" class="col s12 classTopic" onClick="loadDescription()" style="background-color: <%= course[:color] %>" data-key="<%= course[:id] %>">
          <h5 class="white-text"><%= course[:name] %></h5>
          <div class="red-text white center border-radius-13" style="width: 26px; height: 26px; line-height: 26px; position: absolute; bottom: 10px; right: 10px;"><%= course[:requirements] %></div>
          <h6 class="white-text"><%= course[:category] %></h6>
          <h6 class="white-text" style="position: absolute; bottom: 10px;"><%= course[:code] %></h6>
        </a>
      <% end %>
    </div>
  </div>

  <div class="col s9">
    <div id="sample">
      <div style="margin-bottom: 5px; padding: 5px; background-color: aliceblue">
      </div>
      <div id="myDiagram" style="border: solid 1px black; background: white; width: 100%; height: 90vh">
      </div>

    </div>
  </div>
</div>

<!-- Modal Structure -->
  <div id="modal1" class="modal" style="z-index:99999">
    <div class="modal-content">
      <p id="text">A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>